@model IEnumerable<Projeto_Copa_do_Mundo.Models.SelecaoVM>

@{
    ViewBag.Title = "Listar seleções";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@if (Model.Count() > 0)
{
    <table align="center" style="width:99%" cellpadding="2" cellspacing="1" border="1">
        <thead>
            <tr>
                <th>País</th>
                <th>Técnico</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Pais)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Tecnico)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Remover", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Não existem registros</div>
}
